<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2D2D5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <ImageButton
            android:id="@+id/imageButton_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="#00BBABAB"
            app:srcCompat="@drawable/calculimg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:background="#D2D2D5"
            android:gravity="center"
            android:text="INDICE DE MASSE DE GRAISSE"
            android:textColor="#4F5A99"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton_historique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/historique" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:gravity="center"
            android:text="HISTORIQUE"
            android:textColor="#4F5A99"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>